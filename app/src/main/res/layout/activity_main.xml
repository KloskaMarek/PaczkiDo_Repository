<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umk_jasny_szary"
    android:contentDescription="skan"
    android:orientation="vertical"
    android:tooltipText="skanowanie paczki"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="352dp"
        android:onClick="btnWersja_onClick"
        android:text="wersja"
        android:textAlignment="viewEnd"
        android:textColor="@color/umk_zolty_100"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_clock"
        app:iconSize="64dp"
        app:iconTint="@color/umk_zolty_100"
        app:iconTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnZamknij"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="152dp"
        android:onClick="btnLista_onClick"
        android:text="Lista  "
        android:textAlignment="textEnd"
        android:textColor="@color/umk_zolty_100"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_baseline_playlist_add_check_24"
        app:iconSize="48dp"
        app:iconTint="@color/umk_zolty_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSynchro"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="252dp"
        android:onClick="btnExport_onClick"
        android:text="export"
        android:textAlignment="viewEnd"
        android:textColor="@color/umk_zolty_100"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_wifi"
        app:iconTint="@color/umk_zolty_100"
        app:iconTintMode="src_atop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSkanuj"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:onClick="btnSkanuj_onClick"
        android:shadowColor="@color/gray"
        android:text="skanuj"
        android:textAlignment="viewEnd"
        android:textColor="@color/umk_zolty_100"
        android:textSize="24dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:icon="@drawable/ic_baseline_qr_code_scanner_24"
        app:iconPadding="16dp"
        app:iconSize="48dp"
        app:iconTint="@color/umk_zolty_100"
        app:iconTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="skanuj" />

    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnZamknij"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="307dp" />

</androidx.constraintlayout.widget.ConstraintLayout>